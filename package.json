{
  "name": "@developers-joyride/encryptor",
  "version": "1.0.0",
  "description": "Hybrid RSA + AES-256-GCM encryption middleware for Express.js applications with replay protection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Divyansh-007/encryptor.git"
  },
  "bugs": {
    "url": "https://github.com/Divyansh-007/encryptor/issues"
  },
  "homepage": "https://github.com/Divyansh-007/encryptor#readme",
  "keywords": [
    "express",
    "encryption",
    "aes",
    "rsa",
    "gcm",
    "middleware",
    "security",
    "crypto",
    "hybrid-encryption",
    "aes-256-gcm",
    "rsa-oaep",
    "replay-protection",
    "redis",
    "ioredis",
    "typescript",
    "nodejs"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "prepare": "npm run build",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run test && npm run build",
    "clean": "rimraf dist coverage",
    "generate-keys": "node scripts/generate-keys.js"
  },
  "peerDependencies": {
    "express": "^4.0.0 || ^5.0.0",
    "ioredis": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
